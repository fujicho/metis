<%= @title = "パスワード変更" %>
<h1><%= @title %></h1>

<%= form_with model: @change_password_form, url: :teacher_password,
  method: :patch do |f| %>
  <% p = FormPresenter.new(f, self) %>
    <%= p.password_field_block(:current_password, "現在のパスワード", required: true) %>
    <%= p.password_field_block(:new_password, "新しいパスワード", required: true) %>
    <%= p.password_field_block(:new_password_confirmation, "新しいパスワード(確認)", required: true) %>
  <%= f.submit "変更" %>
  <%= link_to "キャンセル", :teacher_account %>
<% end %>