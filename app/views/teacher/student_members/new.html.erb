<% @title = "生徒新規登録"  %>

<div class="row justify-content-center my-5">
  <div class="col-8">
    <div class="card">
      <h4 class="card-header">
        生徒の新規登録
      </h4>
      <div class="card-body">
        <%= form_with model: @student_form, scope: "form",
          url: :teacher_student_members do |f| %>
          <%= render "form", f: f %>
          <%= f.submit "登録" %>
          <%= link_to "キャンセル", :teacher_student_members %>
        <% end %>
      </div>
    </div>
  </div>
</div>
