<% @title = "生徒新規登録"  %>

<div class="row justify-content-center my-5">
  <div class="col-8">
    <div class="card">
      <h4 class="card-header">
        生徒の新規登録
      </h4>
      <%= form_with model: @student_form, scope: "form",
        url: :teacher_student_members do |f| %>
        <%= render "form", f: f %>
        <%= link_to "キャンセル", :teacher_student_members, class: "btn btn-outline-secondary btn-block col-4 mb-3 mx-auto" %>
        <%= f.submit "登録", class: "btn btn-outline-secondary btn-block mx-auto mb-3" %>
      <% end %>
    </div>
  </div>
</div>
