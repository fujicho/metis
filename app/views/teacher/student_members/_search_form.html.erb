<div class="row justify-content-center my-5">
  <div class="col-8">
  <div class="card">
    <h4 class="card-header">
      生徒を検索する
    </h4>
    <div class="card-body">
<%= form_with model: @search_form, scope: "search", url: :teacher_student_members,
  html: {method: :get, class: "search" } do |f| %>
  <% p = FormPresenter.new(f, self) %>
  <%= p.text_field_block(:student_number, "学生番号", class: "form-control") %>
  <%= p.text_field_block(:family_name_kana, "フリガナ(姓)", class: "form-control") %>
  <%= p.text_field_block(:given_name_kana, "フリガナ(名)", class: "form-control") %>
  <%= p.drop_down_list_block(:gender, "性別", [[ "男性" , "male" ],[ "女性", "female"]]) %>
  <%= p.drop_down_list_block(:grade, "学年", 1..3 ) %>
  <%= p.drop_down_list_block(:a_class, "クラス", 1..3 ) %>
  <%= p.text_field_block(:phone_number, "電話番号", class: "form-control") %>
  <%= p.drop_down_list_block(:birth_year, "誕生年", (1980..Time.current.year).to_a.reverse) %>
  <%= p.drop_down_list_block(:birth_month, "誕生月", (1..12).to_a) %>
  <%= p.drop_down_list_block(:address_type, "住所の検索範囲", [[ "自宅住所のみ", "home"],[ "保護者住所のみ", "parents"]]) %>
  <%= p.drop_down_list_block(:prefecture, "都道府県", Address::PREFECTURE_NAMES) %>
  <%= p.text_field_block(:city, "市区町村", class: "form-control") %>
  <%= f.submit("検索") %>
<% end %>
    </div>
  </div>
  </div>
</div>