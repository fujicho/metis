<% @title = "ログイン" %>

<div class="row justify-content-center ">
  <div class="login-form col-3 border rounded ">
    <h1 class="logo">Metista</h1>
    <%= form_with model: @form, url: :teacher_session do |f| %>
      <% p = FormPresenter.new(f,self)  %>
      <%= p.email_field_block(:email, "メールアドレス", value: "guest@example.jp", class: "form-control col-8") %>

      <%= p.password_field_block(:password, "パスワード", value: "examplepass", class: "form-control") %>
      <p class="form-text">パスワードは8文字以上で文字と数字を含みます。</p>
      <%= content_tag(:p, flash.alert, class: "alert alert-danger") if flash.alert %>
      <%= f.submit "ログイン", class: "btn btn-outline-secondary col-12" %>
    <% end %>
  </div>
</div>
