<%= @question.book.book_name %>
<%= @question.title %>
<%= @question.body %>
<%= @question.student_member.family_name %>
<% if @question.answers.present? %>
  <% @question.answers.each do |m| %>
    <%= m.body %>
    <%= m.created_at.strftime('%Y/%m/%d') %>
  <% end %>
<% end %>

<% @title = "回答またはコメント"  %>
<%= form_with model: @answer,
  url: confirm_student_question_answers_path do |f| %>
  <%= render "form", f: f %>
  <%= f.check_box :closed %>
  <%= f.label :closed, "解決済み" %>
  <%= f.submit "確認画面へ進む" %>
  <%= link_to "キャンセル", :student_questions %>
<% end %>