<% p = BoardMessagePresenter.new(board_message,self) %>
<div class="row justify-content-center">
  <div class="card d-flex flex-column mb-2 col-8 justify-content-center" >
    <div class="card-body">
      <h5><%= p.subject %></h5>
      <h6 class="card-subtitle my-2 text-muted"><%= p.contributor %></h6>
      <p class="card-text"><%= safe_join(p.body.split("\n"), tag(:br)) %></p>
      <span class="badge bg-secondary"><%= p.tag %></span>
    </div>
  </div>
</div>