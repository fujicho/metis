<div class="row justify-content-center my-5">
  <div class="col-10">
    <div class="card">
      <h4 class="card-header">
        質問書籍を選ぶ
      </h4>
      <div class="card-body">
        <%= form_with model: @book_search_form, scope: "search", url: :student_questions,
            html: { method: :get, class: "search"} do |f| %>
          <% p = FormPresenter.new(f, self) %>
          <%= p.text_field_block(:book_name, "書籍名",class: "form-control") %>
          <div class="d-flex justify-content-between">
            <%= p.drop_down_list_block(:book_subject, "教科" , Book::SUBJECT_NAMES) %>
            <%= p.drop_down_list_block(:book_type, "参考書or過去問" , [["参考書", "work"], ["過去問", "past"]] )%>
          </div>
          <%= p.drop_down_list_block(:book_year, "年度(過去問)", Book::BOOK_YEAR.reverse) %>
          <div class="text-center">
            <%= f.submit("検索",class: "mt-3") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>